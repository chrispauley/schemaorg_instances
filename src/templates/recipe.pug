- var headObject = { title: "schema instances - Recipe", description: "Recipe template.", keywords: "my keywords"}
- var pathObject = { currentPage: "Recipe" }
doctype html
html(lang='en')
  include ../partials/mixins.pug
  //+headSection4_Cloud(myData, openGraphData)
  +headSection4_Cloud(headObject)

  body
    // Navigation
    +navBar(pathObject)

    // Page Content
    .container
      // Page Heading/Breadcrumbs
      .row
        .col-lg-12
          h1.page-header
            |
            small= name
          ol.breadcrumb
            li
              a(href='index.html') Home
            -var typeData = locals["@type"]
            li.active= typeData

      // /.row
      .row
        .col-lg-12
          div
            h1= locals.name
            p= locals.author
      .row
        .col-lg-5
          div.well
            h2= cookingMethod
            p= recipeYield
            ul
              li= locals.prepTime
              li= locals.recipeCategory
              li= locals.recipeYield
              li= locals.cookingMethod
              li
                p= locals.ingredients

      +fromGulpRow(locals)
